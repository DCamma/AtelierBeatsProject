{#playlists}

<li id={_id} ondrop="drop(event)" ondragover="allowDrop(event)">

	<a class="pl-name" data-for={_id} href="{_id}">
		<i class="nav-menu-icon fa fa-bars"></i>{name}
	</a>

	<a class="edit-btn" data-for={_id} href="#">
		<i class="fa fa-pencil"></i>
	</a>

	<input  class="pl-name-input" name={_id} type="text" value={name}>

</li>

{/playlists}
