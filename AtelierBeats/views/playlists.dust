{#playlists}

<li id="{_id}" ondrop="drop(event)" ondragover="allowDrop(event)">

	<a class="pl-name" data-for={_id} href="{_id}" id="{_id}">
		<i class="nav-menu-icon fa fa-bars"></i>
		<span id="{_id}">{name}</span>
	</a>

	<a class="edit-btn" data-for={_id} href="#" id="{_id}">
		<i class="fa fa-pencil"></i>
	</a>

	<input  class="pl-name-input" name={_id} type="text" value={name} id="{_id}">

</li>

{/playlists}
